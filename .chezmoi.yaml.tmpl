{{- $codespaces := env "CODESPACES" | not | not -}}
sourceDir: {{ .chezmoi.sourceDir | quote }}

diff:
  command: nvim
  args:
    - -d
    - "{{ "{{ .Destination }}" }}"
    - "{{ "{{ .Target }}" }}"

merge:
  command: nvim
  args:
    - -d
    - "{{ "{{ .Source }}" }}"
    - "{{ "{{ .Destination }}" }}"
    - "{{ "{{ .Target }}" }}"

